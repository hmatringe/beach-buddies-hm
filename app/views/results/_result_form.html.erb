<%= simple_form_for [@user, @result], html:{novalidate: false} do |f| %>
  <%= f.input :game_name, label: "Game name", as: :string, required: true, placeholder: "Ex: competition name..." %>
  <%= f.input :game_type, label: "Game Type", as: :string, placeholder: "Ex: friendly, competitive..."  %>
  <%= f.input :description, label: "Description", as: :string, placeholder: ""  %>
  <%= f.input :achievement, label: "Achievement", as: :string, required: true, placeholder: "Ex: 1st place "  %>
  <%= f.input :date, label: "Date", placeholder: "Date", as: :string, required: true, input_html: { class: "date-input" } %>
  <%= f.submit "Add a result", class: "beachbuddy-btn-complementary"%>
<% end %>
